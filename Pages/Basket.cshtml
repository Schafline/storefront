@page
@model BasketModel
<h2>Your Basket</h2>

@if (Model.BasketItems.Count == 0)
{
    <p>Your basket is empty.</p>
}
else
{
    <ul class="list-group">
        @foreach (var item in Model.BasketItems)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <strong>@item.Name</strong><br />
                    <small>@item.Description</small>
                </div>

                <div class="d-flex align-items-center">
                    <span class="badge bg-primary rounded-pill me-2">$@item.Price</span>
                    <form method="post" asp-page-handler="Remove">
                        <input type="hidden" name="Id" value="@item.Id" />
                        <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                    </form>
                </div>

            </li>
        }
    </ul>
    <div class="mt-3 text-end">
        <strong>Total:</strong> $@Model.TotalPrice
    </div>
    <span id="basket-total" data-total="@Model.TotalPrice" hidden></span>
    <div id="paypal-button-container" class="mt-3 text-end"></div>
    <script src="https://www.paypal.com/sdk/js?client-id=YOUR_SANDBOX_CLIENT_ID"></script>
    <script src="~/js/paypal.js"></script>


}
